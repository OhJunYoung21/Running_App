<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RunActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:textAlignment="gravity"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/bm"
                android:text="달리기"
                android:textAlignment="center"
                android:textSize="30sp"
                tools:ignore="HardcodedText" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/map_border"
            android:backgroundTint="@color/material_dynamic_primary90"
            android:orientation="vertical">

            <TextView
                style="@style/runText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="달린 시간"
                android:textSize="40sp" />

            <TextView
                style="@style/runText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/map_border"
            android:backgroundTint="@color/material_dynamic_primary90"
            android:orientation="vertical">

            <TextView
                style="@style/runText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="걸음 수"
                android:textSize="40sp" />

            <TextView
                style="@style/runText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00걸음" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/map_border"
            android:backgroundTint="@color/material_dynamic_primary90"
            android:orientation="vertical">

            <TextView
                style="@style/runText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="평균 속도"
                android:textSize="40sp" />

            <TextView
                style="@style/runText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00km/h" />

        </LinearLayout>


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startRun"
        style="@style/dialog_check_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:backgroundTint="@color/material_dynamic_primary90"
        android:fontFamily="@font/bm"
        android:text="달리기 시작"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@id/showRoute" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/showRoute"
        style="@style/dialog_check_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:backgroundTint="@color/material_dynamic_primary90"
        android:fontFamily="@font/bm"
        android:text="실시간 경로 보기"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>